    <remap from="cmd_vel" to="/demo_crazyflie3/cmd_vel"/>
    
    <remap from="shutdown_flag" to="uav_client_2/shutdown_flag"/>

    <rosparam param="xref">0.5</rosparam>
    <rosparam param="yref">4</rosparam>
    <rosparam param="zref">0.25</rosparam>
  </node>



